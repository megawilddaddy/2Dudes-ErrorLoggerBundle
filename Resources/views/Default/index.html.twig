<html>
    <head>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
        <style type="text/css">
            .warning td {
                background-color: #ccccff !important;
            }
            .error td, .fatal td {
                background-color: #ffcccc !important;
            }
            .notice td {
                background-color: #ccffcc !important;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>Errors</h1>
            <table class="table table-bordered table-condensed table-striped">
                <tr>
                    <th>Id</th>
                    <th>Message</th>
                    <th>Count</th>
                    <th>Type</th>
                    <th>Last occured</th>
                    <td></td>
                    <td></td>
                </tr>
                {% for error in errors %}
                    <tr class="{{ error.type }}">
                        <td>{{ error.id }}</td>
                        <td>{{ error.message }}</td>
                        <td>{{ error.count }}</td>
                        <td>{{ error.type }}</td>
                        <td>{{ error.created_at }}</td>
                        <td>
                            <a class="btn btn-success" href="{{ url('two_dudes.errors.view', {id: error.id}) }}">View</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" href="{{ url('two_dudes.errors.remove', {id: error.id}) }}">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </body>
</html>